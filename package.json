{
    "name": "@open-cluster-management/ui-components",
    "version": "1.19.0",
    "description": "UI component library for open cluster management",
    "license": "Apache-2.0",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "tsc && cp -R src/assets lib/ && copyfiles -u 1 src/**/*.css lib",
        "build:storybook": "cross-env NODE_ENV=production build-storybook --quiet",
        "lint": "npm run eslint",
        "eslint": "eslint --ext ts,tsx,js,jsx ./src --max-warnings=0",
        "eslint:fix": "eslint --ext ts,tsx,js,jsx ./src --fix",
        "check": "npm run prettier",
        "prettier": "prettier --check src",
        "prettier:fix": "prettier --write src",
        "start": "start-storybook -p 9000",
        "test": "npm run jest && npm run eslint && npm run prettier",
        "jest": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/open-cluster-management/ui-components.git"
    },
    "dependencies": {
        "@material-ui/core": "^4.12.3",
        "@material-ui/styles": "^4.11.4",
        "@patternfly/react-charts": "^6.15.20",
        "@patternfly/react-core": "^4.152.4",
        "@patternfly/react-table": "^4.29.58",
        "@react-hook/resize-observer": "^1.2.4",
        "debounce": "^1.2.1",
        "fuse.js": "^6.4.6",
        "get-value": "^3.0.1",
        "isomorphic-fetch": "^3.0.0",
        "moment": "^2.29.1",
        "nock": "^13.1.3",
        "react-router-dom": "^5.3.0",
        "react-tag-autocomplete": "6.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.15.5",
        "@babel/preset-env": "^7.15.4",
        "@babel/preset-react": "^7.14.5",
        "@material-ui/styles": "^4.11.4",
        "@storybook/addon-a11y": "^6.3.8",
        "@storybook/addon-essentials": "^6.3.8",
        "@storybook/addon-storysource": "^6.3.8",
        "@storybook/react": "^6.3.8",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/debounce": "^1.2.1",
        "@types/get-value": "^3.0.2",
        "@types/jest": "^27.0.1",
        "@types/jest-axe": "^3.5.2",
        "@types/react": "^17.0.20",
        "@types/react-dom": "^17.0.9",
        "@types/react-router-dom": "^5.1.8",
        "@typescript-eslint/eslint-plugin": "^4.31.0",
        "@typescript-eslint/parser": "^4.31.0",
        "babel-jest": "^27.1.1",
        "babel-loader": "^8.2.2",
        "copyfiles": "^2.4.1",
        "core-js": "^3.17.2",
        "cross-env": "^7.0.3",
        "css-loader": "^6.2.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.25.1",
        "jest": "^27.1.1",
        "jest-axe": "^5.0.1",
        "jest-sonar-reporter": "^2.0.0",
        "prettier": "^2.3.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "sass": "^1.39.0",
        "sass-loader": "^12.1.0",
        "style-loader": "^3.2.1",
        "ts-jest": "^27.0.5",
        "ts-loader": "^8.3.0",
        "typescript": "4.2.4"
    },
    "peerDependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true,
            "node": true,
            "jest": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:react/recommended",
            "plugin:prettier/recommended"
        ],
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "plugins": [
            "react",
            "@typescript-eslint"
        ],
        "rules": {
            "linebreak-style": [
                "error",
                "unix"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "never"
            ],
            "@typescript-eslint/explicit-module-boundary-types": [
                "off"
            ],
            "no-console": "error"
        },
        "overrides": [
            {
                "files": [
                    "*.ts",
                    "*.tsx"
                ]
            }
        ],
        "settings": {
            "react": {
                "version": "detect"
            }
        }
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "clearMocks": true,
        "rootDir": "./src",
        "setupFilesAfterEnv": [
            "<rootDir>/../jest.setup.ts"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "jest.setup.ts"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "**/*.tsx",
            "!**/*.stories.tsx"
        ],
        "coverageDirectory": "<rootDir>/../coverage",
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "transform": {
            "^.+\\.jsx?$": "babel-jest"
        },
        "coverageReporters": [
            "text",
            "text-summary",
            "html",
            "lcov"
        ],
        "testResultsProcessor": "jest-sonar-reporter",
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/../css.mock.js",
            "\\.(css|less)$": "<rootDir>/../css.mock.js"
        }
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ]
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}
