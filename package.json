{
    "name": "@open-cluster-management/ui-components",
    "version": "0.0.78",
    "description": "UI component library for open cluster management",
    "license": "Apache-2.0",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "tsc",
        "build:storybook": "cross-env NODE_ENV=production build-storybook",
        "lint": "eslint --ext ts,tsx,js,jsx ./src --max-warnings=0",
        "lint:fix": "eslint --ext ts,tsx,js,jsx ./src --fix",
        "check": "prettier --check src",
        "check:fix": "prettier --write src",
        "start": "start-storybook -p 9000 --ci",
        "test": "jest",
        "test:ci": "jest --ci"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/open-cluster-management/ui-components.git"
    },
    "dependencies": {
        "@patternfly/react-core": "^4.50.2",
        "@patternfly/react-table": "^4.16.20",
        "fuse.js": "^6.4.1"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-react": "^7.10.4",
        "@storybook/react": "^6.0.25",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.0.4",
        "@testing-library/user-event": "^12.1.6",
        "@types/jest": "^26.0.14",
        "@types/react": "^16.9.50",
        "@types/react-dom": "^16.9.8",
        "@typescript-eslint/eslint-plugin": "^4.3.0",
        "@typescript-eslint/parser": "^4.3.0",
        "babel-jest": "^26.3.0",
        "babel-loader": "^8.1.0",
        "cross-env": "^7.0.2",
        "css-loader": "^4.3.0",
        "eslint": "^7.10.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.3",
        "jest": "^26.4.2",
        "jest-sonar-reporter": "^2.0.0",
        "prettier": "^2.1.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "sass": "^1.26.11",
        "sass-loader": "^10.0.2",
        "style-loader": "^1.3.0",
        "ts-jest": "^26.4.1",
        "ts-loader": "^8.0.4",
        "typescript": "^4.0.3"
    },
    "peerDependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true,
            "node": true,
            "jest": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:react/recommended",
            "plugin:prettier/recommended"
        ],
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "plugins": [
            "react",
            "@typescript-eslint"
        ],
        "rules": {
            "linebreak-style": [
                "error",
                "unix"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "never"
            ],
            "@typescript-eslint/explicit-module-boundary-types": [
                "off"
            ]
        },
        "overrides": [
            {
                "files": [
                    "*.ts",
                    "*.tsx"
                ]
            }
        ],
        "settings": {
            "react": {
                "version": "detect"
            }
        }
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "clearMocks": true,
        "rootDir": "./src",
        "setupFilesAfterEnv": [
            "<rootDir>/../jest.setup.ts"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "jest.setup.ts"
        ],
        "collectCoverage": true,
        "coverageDirectory": "<rootDir>/../coverage",
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "transform": {
            "^.+\\.jsx?$": "babel-jest"
        },
        "coverageReporters": [
            "text",
            "text-summary",
            "html",
            "lcov"
        ],
        "testResultsProcessor": "jest-sonar-reporter",
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/../css.mock.js",
            "\\.(css|less)$": "<rootDir>/../css.mock.js"
        }
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ]
    }
}
